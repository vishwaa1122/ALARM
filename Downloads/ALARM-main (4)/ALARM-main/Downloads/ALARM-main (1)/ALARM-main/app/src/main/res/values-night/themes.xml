<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark theme -->
    <style name="Theme.Chrona" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Core palette -->
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#000000</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundFloating">@android:color/black</item>
        <item name="android:colorFocusedHighlight">#1FFFFFFF</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        <item name="android:colorControlActivated">#FFFFFF</item>
        <item name="android:colorControlHighlight">#1FFFFFFF</item>

        <!-- System bars -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <!-- App bar / toolbar -->
        <item name="appBarLayoutStyle">@style/Widget.Chrona.AppBarLayout.Dark</item>
        <item name="toolbarStyle">@style/Widget.Chrona.Toolbar.Dark</item>
    </style>

    <style name="Widget.Chrona.AppBarLayout.Dark" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">#000000</item>
    </style>

    <style name="Widget.Chrona.Toolbar.Dark" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Chrona.Toolbar.Dark</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="navigationIconTint">#FFFFFF</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="ThemeOverlay.Chrona.Toolbar.Dark" parent="">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundFloating">@android:color/black</item>
    </style>

</resources>
